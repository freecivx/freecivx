[nation_ugandan]

name   = _("Ugandan")
plural = _("?plural:Ugandans")
groups = "Modern", "African"
legend = _("The Republic of Uganda is located in eastern Africa. The country\
 contains part of Lake Victoria, which is also in Kenya and Tanzania.\
 In the past, the southern part of the country was part of the Buganda\
 kingdom. Modern Uganda gained independence in 1962.")

leaders = {
 "name",                        "sex"

; Regent for Mukaabya Mutesa I (d. 1882).
 "Muganzirwazza",               "Female"

; Kabaka 1939 - 1966, President 1963 - 1966 (d. 1966).
 "Edward Muteesa II",           "Male"

; President 1966 - 1971, 1980 - 1985 (d. 2005)
 "Milton Obote",                "Male"

; Dictator 1971 - 1979 (d. 2003).
 "Idi Amin",                    "Male"

; Vice President 1994-2003.
 "Wandira Speciosa Kagibwe",    "Female"
}

ruler_titles = {
 "government", "male_title",         "female_title"
 "Despotism",  _("Dictator %s"),        _("?female:Dictator %s")

 ; /* TRANS: There are two titles for king, kabaka and
 ;    mujaguzo. Kabaka is the material king, while
 ;    mujaguzo is the spiritual king, and is represented
 ;    by royal drums. These titles come from Buganda, an
 ;    ancient kingdom which occupied much of present-day
 ;    Uganda. */
 "Monarchy",   _("Kabaka %s"),          _("?female:Kabaka %s")
}

flag = "uganda"
flag_alt = "-"
style = "tropical"

